# ==========================================
# 本地网站 1：Web 业务
# ==========================================
{domain1}:8443 {
    # 绑定到本地，防止外网直接访问此端口
    bind 127.0.0.1
    
    # 这里不需要再写域名，直接配置 DNS 插件
    tls {
        dns cloudflare {key}
    }
    
    reverse_proxy localhost:3456
}

