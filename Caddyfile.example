# ==========================================
# 本地网站 2：NaiveProxy
# ==========================================
# 添加 :8443 兜底
:8443, {local proxy domain}:8443 {
    bind 127.0.0.1  # Layer 4 转发过来的流量，这里用 127.0.0.1 是对的
    
    tls {
        dns cloudflare {key}
    }

    forward_proxy {
        basic_auth {username} {password}
        hide_ip
        hide_via
        probe_resistance
    }

    reverse_proxy {reverse_domain} {
        header_up Host {upstream_hostport}
    }
}